bindsym XF86AudioMute exec --no-startup-id amixer set Master toggle && pkill -RTMIN+10 i3blocks
bindsym Shift+XF86AudioMute exec --no-startup-id amixer set Capture toggle && pkill -RTMIN+10 i3blocks
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 2
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 2
bindsym XF86Calculator exec --no-startup-id gnome-calculator

